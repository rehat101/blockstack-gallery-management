{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true
	},
	"plugins": [
		"babel",
		"react"
	],
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"prefer-arrow-callback": "error",
		"wrap-iife": ["error", "inside"],
		"babel/func-params-comma-dangle": 1,
		"no-var": 1,
		"no-redeclare": 1,
		"no-undef": 1,
		"strict": 1,
		"no-unused-vars": 1,
		"semi": [1, "always"],
		"semi-spacing": [1, {"before": false, "after": true}],
		"quotes": ["error", "single"]
	}
}
